<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.ViewAnimationsFragment">

    <ImageView
        android:id="@+id/iv_anim_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_large"
        android:src="@drawable/img_carnegie_quote" />

    <Button
        android:id="@+id/btn_view_animate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/lbl_view_animate" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_view_animate"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/margin_medium_2"
        app:columnCount="3">

        <Button
            android:id="@+id/btn_animate_zoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="Zoom" />

        <Button
            android:id="@+id/btn_animate_clockwise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="Clockwise" />

        <Button
            android:id="@+id/btn_animate_fade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="Fade" />

        <Button
            android:id="@+id/btn_animate_blink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="Blink" />

        <Button
            android:id="@+id/btn_animate_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="Move" />

        <Button
            android:id="@+id/btn_animate_slide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:text="Slide" />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>
